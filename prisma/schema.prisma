generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id           String   @id @default(cuid())
  title        String
  description  String
  price        Float
  location     String
  type         String
  propertyType String
  bedrooms     Int
  bathrooms    Int
  area         Float
  images       String[]
  amenities    String[]
  featured     Boolean  @default(false)
  videoUrl     String?
  floorPlan    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("properties")
}

model PropertySubmission {
  id            String   @id @default(cuid())
  ownerName     String
  email         String
  phone         String
  propertyTitle String
  description   String
  location      String
  type          String
  propertyType  String
  bedrooms      Int
  bathrooms     Int
  area          Float
  price         Float
  amenities     String[]
  status        String   @default("pending")
  adminNotes    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("property_submissions")
}
